---
const {name, position, aboutMe, profileImage } = Astro.props;
import { SOCIAL } from '@/consts/social'
import { Image } from 'astro:assets';

---

<section class="flex justify-center items-center h-screen bg-gray-700	 px-4 md:px-10">
  <div class="max-w-4xl mx-auto bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
    <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 p-4 text-center sm:text-left">
      <Image
        class="w-28 h-28 sm:w-40 sm:h-40 rounded-full"
        src={profileImage}
        alt="Luis San MartÃ­n"
        width={160}
        height={160}
        loading="eager"
      />
      <div>
        <h5 class="text-lg font-medium text-gray-900">{name}</h5>
        <p class="text-sm text-gray-500">{position}</p>
      </div>
    </div>

    <div class="px-4 pb-4">
      <!-- <p class="text-gray-700"> -->
        {aboutMe.map((paragraph) => (
          <p class="text-gray-700">{paragraph}</p>
        ))}
      <!-- </p> -->
    </div>

    <div class="px-4 py-3 bg-gray-50 border-t border-gray-200 flex justify-evenly">
      {
        SOCIAL.map(({ url, image, name, label }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={label ?? name}
            class="flex items-center justify-center transition hover:scale-125"
          >
          <img src={image.logo} width={image.width} height={image.height} alt={name} />
          </a>
      
        ))
      }
    </div>
  </div>
</section>

